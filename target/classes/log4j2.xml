<?xml version="1.0" encoding="UTF-8"?>
<configuration>
<Appenders>

		<Console name="Console" target="SYSTEM_OUT">
		
		<PatternLayout pattern="%d{yyyy-MM-dd  	HH:mm:ss} [%t] %-5Level %Logger{36}
		-%msg%n" />
		
		</Console>
</Appenders>
<Loggers>


<Root Level="info">
	<AppenderRef ref="Console" />
	
</Root>
<Logger name="org.hibernate.SQL" Level="debug">

<AppenderRef ref="Console"/>

</Logger>
</Loggers>Loggers>
</configuration>